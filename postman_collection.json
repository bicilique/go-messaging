{
  "info": {
    "name": "Go Messaging API with Admin System",
    "description": "Postman collection for User and Admin management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create or Update User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"telegram_user_id\": 123456789,\n  \"username\": \"johndoe\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"language_code\": \"en\",\n  \"is_bot\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users"]
        }
      },
      "response": []
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get User by Telegram ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/telegram/{{telegramUserId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "telegram", "{{telegramUserId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"janedoe\",\n  \"first_name\": \"Jane\",\n  \"last_name\": \"Doe\",\n  \"language_code\": \"id\",\n  \"is_bot\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete User by Telegram ID",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/telegram/{{telegramUserId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "telegram", "{{telegramUserId}}"]
        }
      },
      "response": []
    },
    {
      "name": "List Users (Paginated)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/users?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Create Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"telegram_user_id\": 987654321,\n  \"username\": \"admin_user\",\n  \"first_name\": \"Admin\",\n  \"last_name\": \"User\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/create",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "create"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Get Pending Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/pending",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "pending"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Get Approved Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/approved?limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "approved"],
          "query": [
            { "key": "limit", "value": "10" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Approve User",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/{{targetUserId}}/approve?admin_id={{adminId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "{{targetUserId}}", "approve"],
          "query": [
            { "key": "admin_id", "value": "{{adminId}}" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Reject User",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/{{targetUserId}}/reject?admin_id={{adminId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "{{targetUserId}}", "reject"],
          "query": [
            { "key": "admin_id", "value": "{{adminId}}" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Disable User",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/{{targetUserId}}/disable?admin_id={{adminId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "{{targetUserId}}", "disable"],
          "query": [
            { "key": "admin_id", "value": "{{adminId}}" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Enable User",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/users/{{targetUserId}}/enable?admin_id={{adminId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "users", "{{targetUserId}}", "enable"],
          "query": [
            { "key": "admin_id", "value": "{{adminId}}" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Get User Stats",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "stats"]
        }
      },
      "response": []
    },
    {
      "name": "Admin - Cleanup Pending Users",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/admin/cleanup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "admin", "cleanup"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userId", "value": "replace-with-uuid" },
    { "key": "telegramUserId", "value": "123456789" },
    { "key": "adminId", "value": "replace-with-admin-uuid" },
    { "key": "targetUserId", "value": "replace-with-target-user-uuid" }
  ]
}
